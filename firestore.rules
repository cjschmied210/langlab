rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper to check if the user has the 'teacher' role
    function isTeacher() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    // Users collection
    match /users/{userId} {
      allow write: if isOwner(userId);
      // Allow any authenticated user to read profiles (needed for teachers to view student names)
      allow read: if isAuthenticated();
    }

    // Classes collection
    match /classes/{classId} {
      // Teachers can create and update their own classes
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.teacherId == request.auth.uid || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['studentIds']))
      );
      allow delete: if isAuthenticated() && resource.data.teacherId == request.auth.uid;
      // Allow read if authenticated (for joining and dashboard lists)
      allow read: if isAuthenticated();
    }

    // Assignments collection
    match /assignments/{assignmentId} {
      // Teachers can manage assignments
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated(); 
      // Students can read assignments
      allow read: if isAuthenticated();
    }

    // Annotations collection
    match /annotations/{annotationId} {
      // Users can only create annotations for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can read their own annotations, OR teachers can read any annotation
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isTeacher());
      // Users can only update/delete their own annotations
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Submissions collection (for SPACECAT and Essays)
    match /submissions/{submissionId} {
      // Allow create if the new doc belongs to the user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if the EXISTING doc belongs to the user AND the new doc still belongs to the user
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
      // Allow read if owner or teacher
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isTeacher());
    }
  }
}
